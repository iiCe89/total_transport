<%= render partial: "layouts/mobile_header" %>

<h1>Choose A Route</h1>

<form id="journey-input">
  <div class="input-cont">
    <label>From <input type="text" name="from"></label>
    <label>To <input type="text" name="to"></label>
  </div>
</form>

