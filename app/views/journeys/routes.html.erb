      <div class="origin">Bradwell-on-Sea</div>
      <div class="bar"></div>
      <div class="acordBtn" id="farmBtn"><span class="arw"><i class="fa fa-chevron-down"></i></span> Via 4 Stops</div>
      <div class="acord">
        <ul>
          <li style="display: none">Bradwell-on-Sea</li>
          <li>Tillingham</li>
          <li>Dengie</li>
          <li>Asheldham</li>
          <li>Southminster</li>
          <li>Mayland</li>
          <li>Latchindon</li>
          <li>Mundon</li>
          <li style="display: none">Maldon</li>
        </ul>
      </div>
      <div class="desti" id="cinema">Maldon</div>
    </div>
