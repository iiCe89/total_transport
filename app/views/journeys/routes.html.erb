<%= render partial: "layouts/mobile_header" %>

<h1>Choose A Route</h1>

<form id="journey-input">
  <div class="input-cont">
    <label>From <input type="text" name="from"></label>
    <label>To <input type="text" name="to"></label>
  </div>
</form>

<div class="card-cont">
  <div class="route card" id="1">
    <div class="origin"><span class="sub smlTxt">From:</span>Bradwell-on-Sea</div>
    <div class="acordBtn"><span class="arw"><i class="fa fa-chevron-down"></i></span> Via 7 Stops</div>
    <div class="acord">
      <ul>
        <li style="display: none">Bradwell-on-Sea</li>
        <li>Tillingham</li>
        <li>Dengie</li>
        <li>Asheldham</li>
        <li>Southminster</li>
        <li>Mayland</li>
        <li>Latchindon</li>
        <li>Mundon</li>
        <li style="display: none">Maldon</li>
      </ul>
    </div>
    <div class="desti"><span class="sub smlTxt">To:</span>Maldon</div>
    <%= link_to select_stops_journeys_path do %>
      <div class="cardBtn">
        <span>Customise Route <i class="arw fa fa-chevron-right"></i></span>
      </div>
    <% end %>
  </div>

