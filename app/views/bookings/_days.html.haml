%section.section
  %label
    = t('bookings.day.title')
  %section.dates
    - @journeys.keys.uniq.each_with_index do |j, i|
      %a.button.single.date-button{ 'data-selector' => "journeys_#{j.to_date}", 'class' => i > 7 ? 'hidden' : '' }
        %span.date
          = j.to_date.strftime('%e %b')
        %span.day
          = j.to_date.strftime('%a')
