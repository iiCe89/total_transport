<%= form_for [@route, @booking], url: save_journey_route_booking_path(@route, @booking) do |form| %>
  <div class="top-sec container white-block">
    <div class="inner">
      <p class="center mb1">From <strong><%= @booking.pickup_stop.name %></span></strong> to <span class="dropoff"><%= @booking.dropoff_stop.name %></span></p>

      <div class="center">
        <div class="tabs-container">
          <div id="returnTab" class="return-tab tab selected radius border-left-radius">
            Return <span id="return_price"><%= number_to_currency @booking.return_price, unit: '£' %></span>
          </div>
          <div id="singleTab" class="single-tab tab radius border-right-radius">
            Single <span id="single_price"><%= number_to_currency @booking.single_price, unit: '£' %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="inner">
      <%= render partial: 'display_journeys', locals: {form: form, field: :journey_id} %>
    </div>
  </div>
  <div class="continue-btn fixed bottom white-block hidden">
    <div class="container">
      <div class="inner">
        <div class="card">
          <%= form.submit 'Next', :class => 'button alt-button disabled', :disabled => true %>
        </div>
        <!-- to skip the next page - swap these buttons out and have a different URL?
        <div class="card return-ticket mb0">
          <%= form.submit 'Next', :class => 'button alt-button disabled return-btn', :disabled => true %>
        </div>
        <div class="card single-ticket hidden">
          <%= form.submit 'Next', :class => 'button alt-button single-ticket hidden' %>
        </div> 
        ???  :url => choose_pickup_location_route_booking_path(@route, @booking) %>
        -->
      </div>
    </div>
  </div>
  <div class="fixed-spacer"></div>
<% end %>

<script type="text/javascript">

  $(document).ready(function() {
    checkPassengers(<%= @booking.number_of_passengers %>);
    clearRadios();
  });

</script>