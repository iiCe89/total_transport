 <div class="top-sec container white-block">
  <div class="inner">
    <h3><span class="pickup"><%= @booking.pickup_stop.name %></span> to <span class="dropoff"><%= @booking.dropoff_stop.name %></span></h3>
    <p>All times listed are estimates and may change based on who else schedules a ride.</p>
    <%= form_for [@route, @booking], url: save_journey_route_booking_path(@route, @booking) do |form| %>
      <%= form.label :number_of_passengers %>
      <%= form.select :number_of_passengers, [1,2,3,4,5] %>
      <%= form.label :special_requirements %>
      <%= form.text_field :special_requirements %>
  </div>
</div>


<div class="card-cont">
  <% @journeys.each_pair do |date, journeys| %>
    <div class="card no-click date-card">
      <div class="inner">
        <div class="date">
          <h3><%= friendly_date date %></h3>
        </div>
        <% journeys.each do |journey| %>
          <div class="single-journey">
            <div class="left">
              <span class="timeEst"><%= padded_time @booking.pickup_stop.time_for_journey(journey) %></span><br/>
              <span class="pickUp"><%= @booking.pickup_stop.name %></span>
            </div>
            <div class="right">
              <span class="timeEst"><%= padded_time @booking.dropoff_stop.time_for_journey(journey) %></span><br/>
              <span class="dropOff"><%= @booking.dropoff_stop.name %></span>
            </div>
            <div id="confirmation">
              <p><%= pluralize journey.seats_left, "seat" %> left</p>
              <% if journey.full? %>
                <p class="button">Fully booked<p>
              <% else %>
                <%= form.label :journey_id %>
                <%= form.radio_button :journey_id, journey.id %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
  <%= form.submit 'Next', :class => 'button alt-button' %>
<% end %>

<%= link_to "suggest a new time", suggest_journey_route_booking_path(@route, @booking) %>
