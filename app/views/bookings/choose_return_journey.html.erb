<p>Single Journey: <%= number_to_currency @booking.single_price, unit: '£' %>
<%= link_to "No return journey", choose_pickup_location_route_booking_path(@route, @booking) %>
<p>Return Journey: <%= number_to_currency @booking.return_price, unit: '£' %>

<div class="card-cont">
  <% @journeys.each_pair do |date, journeys| %>
    <div class="card no-click date-card">
      <div class="inner">
        <div class="date">
          <h3><%= friendly_date date %></h3>
        </div>
        <% journeys.each do |journey| %>
          <div class="single-journey">
            <div class="left">
              <span class="timeEst"><%= @booking.pickup_stop.time_for_journey(journey).strftime("%l:%M%P") %></span><br/>
              <span class="pickUp"><%= @booking.pickup_stop.name %></span>
            </div>
            <div class="right">
              <span class="timeEst"><%= @booking.dropoff_stop.time_for_journey(journey).strftime("%l:%M%P") %></span><br/>
              <span class="dropOff"><%= @booking.dropoff_stop.name %></span>
            </div>
            <div id="confirmation">
              <p><%= pluralize journey.seats_left, "seat" %> left</p>
              <% if journey.full? %>
                <p class="button">Fully booked<p>
              <% else %>
                <%= form_for [@route, @booking], url: save_return_journey_route_booking_path(@route, @booking) do |form| %>
                  <%= form.hidden_field :return_journey_id, value: journey.id %>
                  <%= form.submit 'Confirm Time', :class => 'button' %>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "suggest a new time", suggest_journey_route_booking_path(@route, @booking) %>
