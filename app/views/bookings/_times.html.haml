%section.section
  .times{ id: "#{type}_times"}
    - if type == 'return'
      %label
        = t('bookings.return.time')
      %label.button.secondary
        = t('button.return')
        = form.radio_button journey_type, nil
    - else
      %label
        = t('bookings.outward.time')
    %section.hide_times
      - @journeys.each do |date,journeys|
        %p{class: "journeys_#{date.to_s} hidden time" }
          - journeys.sort_by(&:start_time).uniq.each do |j|
            %label.button
              = j.time_at_stop(@booking.pickup_stop).strftime("%l:%M%P")
              
              = form.radio_button journey_type, j.id, 'data-arrival-time' => j.time_at_stop(@booking.dropoff_stop).strftime("%l:%M%P")

  #arrival-times.hidden