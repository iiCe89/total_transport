<div class="onboarding-header blue-block">
  <div class="inner center">
    <h1><%= @page_title %></h1>
    <h2><%= t("homepage.title.#{Rails.configuration.x.pickup.council}") =%></h2>
    <p><%= t("homepage.intro.#{Rails.configuration.x.pickup.council}") =%></p>
    <!-- <p>Instead of running fixed routes with fixed stops, Pickup lets you book trips in advance. Passengers can be picked up anywhere they like - a bus stop, a local place of interest, or even a home. It's safe, convenient and easy to use.</p> -->

    <%= form_for @passenger do |form| %>
      <%= form.label :phone_number, "Get started with your mobile number" %>
      <%= form.number_field :phone_number, autofocus: true, :pattern => "\\d*", :step => "0" %>
      <div class="actions">
        <%= form.submit "Verify Number", class: 'alt-button' %>
      </div>
    <% end %>
    <h4><a href="#step-1" title="How It Works..."> <i class="fa fa-long-arrow-down"></i> How It Works...</a></h4>
  </div>
</div>

<div class="steps container">
  <div id="step-1" class="grey-block">
    <div class="inner">
      <h3>Choose a route</h3>
      <p><%= t("homepage.route_intro.#{Rails.configuration.x.pickup.council}") =%></p>
      <p>All times listed are estimates and may change based on who else schedules a ride.</p>
      <!-- <h4><a href="#step-2" title="Step 2"> <i class="fa fa-long-arrow-down"></i> Step 2</a></h4> -->
    </div>
  </div>

  <div id="step-2" class="blue-block">
    <div class="inner">
      <h3>Select pickup and dropoff points</h3>
      <p>Start from a house, a shop, or anywhere else that’s convenient.</p>
      <!-- <h4><a href="#step-3" title="Step 3"> <i class="fa fa-long-arrow-down"></i> Step 3</a></h4> -->
    </div>
  </div>

  <div id="step-3" class="grey-block">
    <div class="inner">
      <h3>Pick a payment method</h3>
      <p>You can pay for Pickup online, with cash, or with your bus pass. All online transactions use Paypal and all cash must be paid directly to your driver.</p>
      <!-- <h4><a href="#step-4" title="Step 4"> <i class="fa fa-long-arrow-down"></i> Step 4</a></h4> -->
    </div>
  </div>

  <div id="step-4" class="blue-block">
    <div class="inner">
      <h3>Travel</h3>
      <p>Pickup will send you a text a few hours before your trip to let you know we’re on our way.</p>

      <%= form_for @passenger, :html => {class: 'center'} do |form| %>
        <%= form.label :phone_number, "Get started with your mobile number" %>
      <%= form.number_field :phone_number, :pattern => "\\d*", :step => "0" %>
        <div class="actions">
          <%= form.submit "Verify Number", class: 'alt-button' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :js do %>
<script type="text/javascript">
  $(function() {
    $('#passenger_phone_number').keydown(function (evt) {
      var keycode = evt.charCode || evt.keyCode;
      if (keycode  == 38 || keycode == 40) { //Enter key's keycode
        return false;
      }
    });
});
</script>
<% end %>
