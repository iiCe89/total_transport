<div class="card">
  <div class="inner">
    <%= form_for [:admin, @vehicle] do |form| %>
      <%= render partial: 'fields', locals: {form: form} %>
  </div>
  <%= form.submit "Update Vehicle", :class => "cardBtn" %>
  <% end %>
</div>

<% if current_supplier.admin? %>
  <%= form_for [:admin, @vehicle], method: :delete do |form| %>
    <%= form.submit "Delete vehicle", :class => "cardBtn negative delete" %>
  <% end %>
<% end %>
