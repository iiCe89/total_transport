<div id="sup_edit_stop">
<h2>Add a Stop:</h2>
<div class="wide-btn">
  <%= form_for [:admin, @route, @stop] do |form| %>
    <%= render partial: 'fields', locals: {form: form} %>
    <div class="half">
      <%= form.submit "Create & add another stop", :class => "button name_validation border-left-radius" %>
    </div>
    <div class="half" style="clear:none;">
      <%= form.submit "Create & finish", :class => "button alt-button name_validation border-right-radius" %>
    </div>
  <% end %>
</div>