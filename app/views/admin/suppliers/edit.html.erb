<div class="card wide-btn no-click">
  <%= form_for [:admin, @supplier] do |form| %>
    <%= form.label :email %>
    <%= form.text_field :email %>
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :admin %>
    <%= form.check_box :admin %>
    <%= form.label :approved %>
    <%= form.check_box :approved %>
    <%= form.submit "Update", :class => "button border-left-radius half" %>
  <% end %>

  <%= form_for [:admin, @supplier], method: :delete do |form| %>
    <%= form.submit "Delete supplier", :class => "button negative delete half border-right-radius" %>
  <% end %>
  
</div>