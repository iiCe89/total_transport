<div id="sup_new_sms">
  <h2>Send an SMS:</h2>
  <%= form_tag admin_sms_path do %>
    <%= label_tag 'sms[to]', 'To' %>
    <%= text_field :sms, :to %>
    <%= label_tag 'sms[body]', 'Body' %>
    <%= text_area :sms, :body, rows: 5 %>
  <%= submit_tag "Send SMS", :class => "button name_validation border-bottom-radius" %>
  <% end %>
</div>
